@model Party_Invites.Models.GuestResponse
@using System.Configuration;
@using System.Net.Mail;
@using System.Net;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Thanks</title>
    <style>
        .btn a {
            color: white;
            text-decoration: none;
        }

        body {
            background-color: #F1F1F1;
        }
    </style>
</head>
<body>
    @{
        try
        {
            WebMail.SmtpServer = ConfigurationManager.AppSettings["smtpHost"];
            WebMail.SmtpPort = 587;
            WebMail.EnableSsl = true;
            WebMail.UserName = ConfigurationManager.AppSettings["smtpEmail"];
            WebMail.Password = ConfigurationManager.AppSettings["smtpPassword"]; ;
            WebMail.From = "mohamed.bennourddine@gmail.com";
            WebMail.Send("mohamed.bennourddine@gmail.com", "RSVP Notification",
                                            Model.Name + " is " + (((bool)Model.WillAttend) ? " " : "not ") + "attending");

            //SmtpClient smtpClient = new SmtpClient();
            //System.Net.NetworkCredential credentials = new System.Net.NetworkCredential("username", "password");
            //smtpClient.Credentials = credentials;

            //smtpClient.Send("mohamed.bennourddine@gmail.com", "mohamed.bennourddine@gmail.com", "RSVP Notification",
            //                                Model.Name + " is " + (((bool)Model.WillAttend) ? " " : "not ") + "attending");

        }
        catch (Exception ex)
        {
            @: <b>Sorry  we couldn't send the email to confirm your RSVP</b>
            @ex.Message;
        }
    }
    <div class="text-center">
        <h1>Thanks you, @Model.Name !</h1>
        <div class="lead">
            @if (Model.WillAttend == true)
            {
                @:It's great that you're coming.The drinks are already in the fridge
            }
            else
            {
                @:Sorry to hear that you can't make it,but thanks for letting us Know.
            }
        </div>
    </div>
</body>
</html>
